{
  "openapi": "3.0.1",
  "info": {
    "title": "ToDo List API",
    "version": "1.0.0",
    "description": "API para gerenciamento de lista de afazeres, utilizando Node.js, Express e MySQL.",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "components": {
    "schemas": {
      "Tasks": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        },
        "xml": {
          "name": "Product"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Documentação do Swagger",
    "url": "http://swagger.io"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor local (HTTP)"
    },
    {
      "url": "https://todo-list-api-6u0s.onrender.com",
      "description": "Servidor remoto (HTTPS)"
    }
  ],
  "tags": [
    {
      "name": "Tasks",
      "description": "Rotas de tarefas"
    }
  ],
  "paths": {
    "/tasks": {
      "get": {
        "summary": "Listar tarefas",
        "tags": ["Tasks"],
        "description": "Obter lista de tarefas.",
        "responses": {
          "400": {
            "description": "Tarefas(s) não encontrada(s)."
          },
          "200": {
            "description": "Tarefa(s) encontrada(s) com sucesso."
          }
        }
      },
      "post": {
        "summary": "Criar tarefa",
        "tags": ["Tasks"],
        "description": "Criar uma nova tarefa.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  }
                },
                "required": ["title"],
                "example": {
                  "title": "Apresentação de projeto"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Tarefa não encontrada."
          },
          "201": {
            "description": "Tarefa criada com sucesso."
          }
        }
      }
    },
    "/tasks/{id}": {
      "put": {
        "summary": "Atualizar tarefa",
        "tags": ["Tasks"],
        "description": "Atualizar uma tarefa específica pelo ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                },
                "required": ["title", "status"],
                "example": {
                  "title": "Reunião de equipe",
                  "status": "Concluído"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Tarefa não encontrada."
          },
          "200": {
            "description": "Tarefa atualizada com sucesso."
          }
        }
      },
      "delete": {
        "summary": "Deletar tarefa",
        "tags": ["Tasks"],
        "description": "Deletar uma tarefa específica pelo ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Tarefa não encontrada."
          },
          "200": {
            "description": "Tarefa deletada com sucesso."
          }
        }
      }
    }
  }
}
